        "karma-mocha": "^2.0.1",
        "karma-typescript": "^5.5.2",
        "karma-typescript-es6-transform": "^5.5.2",
        "luxon": "^3.0.4",
        "mocha": "^10.0.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.4.4"
